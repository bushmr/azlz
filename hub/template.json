{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vnetName": {
      "type": "string",
      "metadata": {
        "description": "VNet name"
      }
    },
    "vnetAddressPrefix": {
      "type": "array",
      "metadata": {
        "description": "Address prefix"
      }
    },
    "subnet1Prefix": {
      "type": "string",
      "metadata": {
        "description": "External DMZ Prefix"
      }
    },
    "subnet1Name": {
      "type": "string",
      "metadata": {
        "description": "External DMZ Name"
      }
    },
    "subnet2Prefix": {
      "type": "string",
      "metadata": {
        "description": "Internal DMZ Prefix"
      }
    },
    "subnet2Name": {
      "type": "string",
      "metadata": {
        "description": "Internal DMZ Name"
      }
    },
    "gatewaySubnetPrefix": {
      "type": "string",
      "metadata": {
        "description": "GatewaySubnet Prefix"
      }
    },
    "gatewaySubnet": {
      "type": "string",
      "metadata": {
        "description": "Gateway Subnet Name"
      },
      "allowedValues": [
        "GatewaySubnet"
      ]
    },
    "bastionSubnetPrefix": {
      "type": "string",
      "metadata": {
        "description": "Bastion Subnet Prefix"
      }
    },
    "bastionSubnet": {
      "type": "string",
      "metadata": {
        "description": "Subnet for Azure Bastion" 
      },
      "allowedValues": [
        "AzureBastionSubnet"
      ]
    },
    "AzureFirewallSubnetPrefix": {
      "type": "string",
      "metadata": {
        "description": "AzureFirewall Subnet Prefix"
      }
    },
    "AzureFirewallSubnet": {
      "type": "string",
      "metadata": {
        "description": "Subnet for Azure Firewall" 
      },
      "allowedValues": [
        "AzureFirewallSubnet"
      ]
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('vnetName')]",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": "[parameters('vnetAddressPrefix')]"
        },
        "subnets": [
          {
            "name": "[parameters('subnet1Name')]",
            "properties": {
              "addressPrefix": "[parameters('subnet1Prefix')]"
            }
          },
          {
            "name": "[parameters('subnet2Name')]",
            "properties": {
              "addressPrefix": "[parameters('subnet2Prefix')]"
            }
          },
          {
            "name": "[parameters('gatewaySubnet')]",
            "properties": {
              "addressPrefix": "[parameters('gatewaySubnetPrefix')]"
            }
          },
          {
            "name": "[parameters('bastionSubnet')]",
            "properties": {
              "addressPrefix": "[parameters('bastionSubnetPrefix')]"
            }
          },
         {
            "name": "[parameters('AzureFirewallSubnet')]",
            "properties": {
              "addressPrefix": "[parameters('AzureFirewallSubnetPrefix')]"
            }
          } 
        ]
      }
    }
  ]
}
